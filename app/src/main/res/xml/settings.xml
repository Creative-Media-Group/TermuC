<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings"
	android:persistent="false">
	<PreferenceCategory
		android:title="@string/global">
		<CheckBoxPreference
			android:key="@string/key_dark_mode"
			android:title="@string/dark_mode"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/editor">
		<ListPreference
			android:persistent="false"
			android:key="textsize"
			android:title="@string/textsize"
			android:entries="@array/sizes"
			android:entryValues="@array/sizes"
			/>
		<CheckBoxPreference
			android:key="@string/key_wordwrap"
			android:title="@string/wordwrap"
			/>
		<CheckBoxPreference
			android:key="@string/key_whitespace"
			android:title="@string/whitespace"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/file_browser">
		<CheckBoxPreference
			android:key="@string/key_show_hidden"
			android:title="@string/show_hidden"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/compiler">
		<EditTextPreference
			android:key="@string/key_cflags"
			android:title="@string/cflags"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/analysis">
		<ListPreference
			android:key="@string/key_completion"
			android:title="@string/completion"
			android:entries="@array/engine"
			android:entryValues="@array/v_engine"
			/>
		<EditTextPreference
			android:key="@string/key_lsp_host"
			android:title="@string/lsp_host"
			/>
		<EditTextPreference
			android:key="@string/key_lsp_port"
			android:title="@string/lsp_port"
			android:inputType="numberDecimal"
			/>
	</PreferenceCategory>
</PreferenceScreen>

